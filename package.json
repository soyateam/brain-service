{
  "name": "task-service",
  "version": "1.0.0",
  "description": "Task service for operations on tasks",
  "main": "server.js",
  "scripts": {
    "serve": "node -r dotenv/config dist/server.js",
    "start": "npm run build && npm run serve",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc-watch --project . --onSuccess \"node dist/server.js\"",
    "install:prod": "npm install --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soyateam/task-service.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/soyateam/task-service/issues"
  },
  "homepage": "https://github.com/soyateam/task-service#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "elastic-apm-node": "^3.10.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "moment": "^2.29.1",
    "mongoose": "^5.9.27",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/helmet": "0.0.47",
    "@types/mongoose": "^5.7.34",
    "@types/morgan": "^1.9.1",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/winston": "^2.4.4",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.9.7"
  }
}
